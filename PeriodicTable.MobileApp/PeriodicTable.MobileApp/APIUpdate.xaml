        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Text="Updating data from API..." />
            <ActivityIndicator Grid.Row="1" IsRunning="true" HorizontalOptions="Center" />
        </Grid>
    </ContentPage.Content>
</ContentPage>